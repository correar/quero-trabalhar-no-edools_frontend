screen-desktop-large = 1200px
screen-desktop = 992px
screen-tablet = 768px
screen-mobile = 480px 

container-desktop-large = 950px
container-desktop = 728px
container-tablet = 440px
container-mobile = 100%
  
*
  box-sizing: border-box

body
  font-family Arial, Helvetica, sans-serif 

.ListAll
  width 100%
  display table
  margin auto auto

.ListAll .TitleRow
  width 100%
  background-color #1a1a1a
  color #ffffff
  font-width bold
  display table

.ListAll .TitleName
  float left
  width 50%
  padding 20px

.ListAll .Row:after
  content ""
  display table
  clear both

.ListAll .Data
  float left
  width 50%
  padding 20px

.ListAll .Data:hover
  background-color #a6a6a6

.ListAll .Row:nth-child(odd)
  background-color #f2f2f2

.ListAll .Row:nth-child(even)
  background-color #ffffff

.ListAll .TitleData
  display none

@media screen and (max-width: screen-desktop-large)
  .ListAll .Data
    width 50%
  .ListAll
    width container-desktop-large

@media screen and (max-width: screen-desktop)
  .ListAll .Data
    width 50%
  .ListAll
    width container-desktop

@media screen and (max-width: screen-tablet)
  .ListAll .Data
    width 100%
  .ListAll
    width container-tablet
  .ListAll .TitleRow
    display none
  .ListAll .TitleData
    display inline

@media screen and (max-width: screen-mobile)
  .ListAll .Data
    width 100%
  .ListAll
    width container-mobile
  .ListAll .TitleRow
    display none
  .ListAll .TitleData
    display inline
